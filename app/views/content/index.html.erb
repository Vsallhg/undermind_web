<div id="wrapper-search">
  <%#= render 'shared/sub_navbar' %>
  <div class="page-container-sub-navbar">
    <div class="row index-outer-flexbox">
      <div class="index-mid-flexbox">
        <div class="index-inner-flexbox">
          <% if @content_list.nil?? %>
            <div class="empty-search-warning">
              <p>There are no content in
              <% @search_params.each do |query| %>
                <span>"<%= query.capitalize %>"</span>
              <% end %>
              yet! Help us add some!
              </p>
            </div>
            <% @content_take = Content.take(50) %>
            <% @content_take.each do |content| %>
              <%= render 'shared/list', content: content %>
            <% end %>
          <% else %>
            <% @content_list.each do |content| %>
              <%= render 'shared/list', content: content %>
            <% end %>
          <% end %>
        </div>
   <!--      <div class="index-pagination">
        <%#= paginate @batches %>
        </div> -->
      </div>
    </div>
  </div>
</div>
