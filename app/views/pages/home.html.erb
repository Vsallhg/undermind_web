<div class="banner">
  <div class="banner-content col-xs-12 col-sm-10 col-md-6 col-xl-4 col-sm-offset-1 col-md-offset-3 col-xl-offset-4">
    <div class="banner-header">
      <h1>What do you want to learn?</h1>
    </div>
    <div class="banner-search-box">
      <%= form_tag content_index_path, method: :get, class: "banner-search-text" do %>
        <%= text_field_tag :search, nil, placeholder: "Try 'Philosophy or Science'!", class: "search-form-control root-search-opacity" %>
        <%= submit_tag "", style: "display: none;" %>
        <button class="btn-undermind-no-padding btn" id="banner-button">Search</button>
      <% end %>
    </div>
  </div>
</div>
